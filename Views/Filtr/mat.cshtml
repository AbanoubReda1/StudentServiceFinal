@model IEnumerable<StudentService.Models.Material>

@{
    ViewBag.Title = "mat";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <div class="row">
        
            @foreach (var item in Model)
            {
                <h3></h3>
                <br />

                <style>




                    .card .card-header.card-header-image {
                        filter: invert(1);
                    }

                    .card-title {
                        color: #eee;
                        font-size: x-large;
                    }
                </style>

                <div class="col-lg-3 col-md-6">
                    <div class="card card-blog">
                        <div class="card-header card-header-image">

                            <img class="img" src="~/img/pdf.png">

                            <div class="colored-shadow" style="background-image: url('/img/pdf.png'); opacity: 1;"></div>
                        </div>
                        <div class="card-body ">
                            <h6 class="card-category text-primary">
                                @Html.DisplayFor(modelItem => item.LectureNumber)
                            </h6>
                            <h4 class="card-category text-primary">
                                @Html.DisplayFor(modelItem => item.LectureName)

                            </h4>
                        </div>
                        <div class="card-footer ">
                            <div class="author">
                                <a href="~/StudeCourse/DownloadFile?filePath=@item.PDF"><img src="~/img/images.png" style="width: 15px; height: 15px" title="Download" /></a>
                                <span> </span>
                            </div>
                        </div>
                    </div>
                </div>




            }
   

           
     </div>